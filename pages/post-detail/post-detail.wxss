
.container{
    display:flex;
    flex-direction: column;
}

.head-image{
    width:100%;
    height:460rpx;
}

.author-date{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 20rpx;
    margin-left: 30rpx;
}

.avatar{
    width: 64rpx;
    height: 64rpx;
    
}

.author{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    vertical-align: middle;
    color:#666;
}

.const-text{
    font-size: 24rpx;
    color:#999;
    margin-left: 20rpx;
}


.date{
    font-size:24rpx;
    margin-left: 30rpx;
    color:#999;
}


.title{
    margin: 30rpx 0 0 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    color:#4b556c;
    letter-spacing: 1px;
}

.horizon{
    width:660rpx;
    height: 1rpx;
    background-color: #e5e5e5;
    position: absolute;
    z-index: -99;
}

.circle image{
    width: 90rpx;
    height: 90rpx;
}

.share-img{
    margin-right: 30rpx;
}

.circle{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    width:660rpx;
}


.tool{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    margin-top:20rpx;
}


.detail{
    color:#666;
    margin: 20rpx 30rpx 0 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
    font-size: 28rpx;
}

.audio{
    width:102rpx;
    height: 102rpx;
    position: absolute;
    left:50%;
    margin-left: -51rpx;
    top: 50rpx;
    opacity: 0.6;
}









